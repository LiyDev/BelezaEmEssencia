<html>
<head>
<style>
table {
  border-collapse: inherit;
  width: 100%;
  padding: 0 0 5em 0;
}

th, td {
  text-align: left;
  padding: 1.5em;
}

h3{
    padding: 2em;
    display: flex;
    justify-content: center;
    text-align: center;
    font-size: 23px;
}

tr:nth-child(even) {background-color: #f2f2f2;}
</style>
</head>
<body>
<div class="container__adicionar">
        <a href="/vendas/add" class="botao__adicionar">Adicionar Venda</a>
</div>

<h3>Tabela de Vendas</h3>

<div style="overflow-x: auto;">
  <table>
    <tr>
        <th>ID Venda</th>
        <th>ID Cliente</th>
        <th>ID Funcionario</th>
        <th>Data da venda</th>
    </tr>
    {{#each vendas}}
    <tr>
        <td>{{dataValues.id_venda}}</td>
        <td>{{dataValues.id_cliente}}</td>
        <td>{{dataValues.id_funcionario}}</td>
        <td>{{dataValues.data_da_venda}}</td>
        <td><a href="/vendas/editar/{{dataValues.id_venda}}">Editar</a></td>
        <td><a href="/vendas/delete/{{dataValues.id_venda}}">Excluir</a></td>  
        <td><a href="/vendas/produto/{{dataValues.id_venda}}">Adicionar Produto</a></td>  

    </tr>
    {{/each}}

     
  </table>
</div>

</body>
</html>
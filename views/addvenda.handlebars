 <div class="titulo__form">
    <h3>Cadastrar Venda</h3>
  </div>

<div class="formulario">
        <form class="form" action="/vendas/add" method="post">
          <div class="form-item col-responsive">
            <input class="input" type="text" name="id_cliente" required="required" id="id_cliente">
            <label class="label" for="id_cliente">ID Cliente</label>
          </div>
          <div class="form-item col-responsive">
            <input class="input" type="text" name="id_funcionario" required="required" id="id_funcionario" />

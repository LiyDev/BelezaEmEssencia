 <div class="titulo__form">
    <h3>Cadastrar Venda</h3>
  </div>

<div class="formulario">
        <form class="form" action="/vendas/add" method="post">
          <div class="form-item col-responsive">
            <label class="selectlabelvenda" for="id_cliente">ID Cliente</label>
            <select name="id_cliente" id="id_cliente">
              {{#each clientes}}
              <option value="{{dataValues.id_cliente}}"> {{dataValues.id_cliente}} - {{dataValues.nome}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-item col-responsive">
            <label class="selectlabelvenda" for="id_funcionario">ID Funcionario</label>
            <select name="id_funcionario" id="id_funcionario">
              {{#each funcionarios}}
              <option value="{{dataValues.id_funcionario}}"> {{dataValues.id_funcionario}} - {{dataValues.nome}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-item col-responsive">
            <input class="input date" type="date" name="data_da_venda" required="required" id="data_da_venda" placeholder="sim"/>
            <label class="labeldate" for="data_da_venda">Data da venda</label>
          </div>
          <div class="form-item">
            <input class="botao" type="submit" value="Enviar"/>
          </div>
        </form>
    </div>
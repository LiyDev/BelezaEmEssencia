<html>
<head>
<style>
table {
  border-collapse: inherit;
  width: 100%;
  padding: 0 0 5em 0;
}

th, td {
  text-align: left;
  padding: 1.5em;
}

h3{
    padding: 2em;
    display: flex;
    justify-content: center;
    text-align: center;
    font-size: 23px;
}

tr:nth-child(even) {background-color: #f2f2f2;}
</style>
</head>
<body>
<div class="container__adicionar">
        <a href="/clientes/add" class="botao__adicionar">Adicionar Cliente</a>
</div>

<h3>Tabela de Clientes</h3>

<div style="overflow-x: auto;">
  <table>
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Data de nascimento</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Endere√ßo</th>
    </tr>
    {{#each clientes}}
    <tr>
        <td>{{dataValues.id_cliente}}</td>
        <td>{{dataValues.nome}}</td>
        <td>{{dataValues.data_nascimento}}</td>
        <td>{{dataValues.email}}</td>
        <td>{{dataValues.telefone}}</td>
        <td>{{dataValues.endereco}}</td>
        <td><a href="/clientes/editar/{{dataValues.id_cliente}}">Editar</a></td>
        <td><a href="/clientes/delete/{{dataValues.id_cliente}}">Excluir</a></td>
    </tr>
    {{/each}}
  </table>
</div>

</body>
</html>